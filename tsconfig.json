{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ES2020"],
    "module": "ES2020",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2015"
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
